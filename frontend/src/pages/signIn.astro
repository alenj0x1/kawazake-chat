---
import Layout from "../layouts/Layout.astro";
---

<Layout title="kawasakeChat - Sign in">
  <main>
    <div class="d-container">
      <form class="form">
        <header class="form-header">
          <img src="/svgs/bad-pig-emoji-svgrepo-com.svg" class="svg"></img>
          <h2 class="subt">Sign in</h2>
          <p class="para">Connect with your friends and visit the groups you like the most</p>
        </header>

        <div class="form-content">
          <input type="text" placeholder="Username" class="input">
          <input type="text" placeholder="Password" class="input">
        </div>

        <footer class="form-footer">
          <button id="signIn" class="btn btn-primary">Let's go</button>
        </footer>
      </form>
    </div>
  </main>
</Layout>

<script>
  document.getElementById("signIn")?.addEventListener('click', (e) => {
    fetch(`${BASE_URL}/auth/login`)
      .then(res => res.json())
      .then((data) => {
        console.log(data)
      })
      .catch((err) => {
        console.log(err)
      })
  })
</script>

<style scoped>
.d-container {
  @apply flex justify-center
}
</style>