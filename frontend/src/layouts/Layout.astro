---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<script is:inline src="/scripts/base.js"></script>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Quicksand:wght@300..700&display=swap');

:root {
	/* Background */
	--bg: rgb(10, 10, 20);
	--bg-primary: rgb(47, 141, 255);
	--bg-secondary: rgb(70, 185, 60);
	--bg-input: rgb(17, 17, 32);

	/* Color */
	--text-primary: rgb(85, 161, 255);
	--text-secondary: rgb(134, 189, 255);
	--text-button: rgb(255, 255, 255);
	--text-input: rgb(96, 165, 250);

	/* Input */
	--input-border: 2px solid rgb(47, 141, 255, 0.4);
	--input-border-focus: 2px solid rgb(47, 141, 255);
	--input-placeholder: rgb(96, 165, 250, 0.4);
}

body {
	background: var(--bg);
}

.title,
.para,
.btn,
.input {
	font-family: "Quicksand", sans-serif;
}

.title {
	color: var(--text-primary);
	@apply font-bold text-5xl
}

.subt {
	color: var(--text-primary);
	@apply font-bold text-3xl
}

.para {
	color: var(--text-secondary);
	@apply text-base font-medium
}

.btn {
	@apply px-4 py-3 rounded font-semibold text-center
}

.btn-primary {
	color: var(--text-button);
	background-color: var(--bg-primary);
}

.btn-secondary {
	color: var(--text-button);
	background-color: var(--bg-secondary);
}

.d-container {
	@apply m-5
}

.input {
	border: var(--input-border);
	background-color: var(--bg-input);
	color: var(--text-input);
	@apply py-3 px-4 rounded text-base
}

.form {
  @apply flex flex-col pt-8 pb-16 px-6
}

.form-header {
	@apply flex flex-col gap-1 mb-4
}

.form-content {
  @apply flex flex-col gap-3
}

.form-footer {
  @apply mt-6
}

.input:focus {
	outline: none;
	border: var(--input-border-focus);
}

.input::placeholder {
	color: var(--input-placeholder);
}

.svg {
  @apply flex justify-center items-center h-14 self-start mb-3
}
</style>
